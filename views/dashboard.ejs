<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="shortcut icon" href="images\undraw_share_link_qtxe.svg" type="image/x-icon">

    <!-- CSS only -->
    <link rel="stylesheet" href="css/bootstrap.min.css">

    <style>
        .form {
            margin-top: 120px;
        }
    </style>


</head>

<body>
    <nav style="background-color: #8e87e4;" class="navbar navbar-light navbar-expand-lg fixed-top text-center">
        <div class="container">
            <a class="navbar-brand" href="/"><img width="75px" src="images\undraw_share_link_qtxe.svg" alt="linksgroup"
                    title="logo"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul style="font-family: auto;" class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <button class="btn"><a class="nav-link active" href="/logout">Logout <img style="width: 50px; border-radius: 100%;"
                                src="<%=user.image%>" alt=""></a></button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container form">
        <div class="row">
            <div class="col-lg-6">
                <p>My one link: <a target="_blank" href="/<%=user.onelink%>">/<%=user.onelink%></a></p>
                <form method="POST" action="/addlink">
                    <div class="mb-3">
                        <input type="text" placeholder="Enter title" class="form-control" id="title" name="title"
                            required>
                    </div>
                    <div class="mb-3">
                        <input type="url" placeholder="Enter URL" class="form-control" id="url" name="url" required>
                    </div>

                    <button type="submit" data-toggle="modal" data-target="addlink"
                        style="width:100%;background-color: #8e87e4;" class="btn btn-primary" type="button">Add New
                        Link</button>
                </form>

            </div>

            <div class="col-lg-6" style="width: 100%; overflow-x: scroll;">
                <table class="table table-striped">

                    <tbody>
                        <tr>
                            <th>Title</th>
                            <th>Link</th>
                        </tr>
                        <% data.forEach(function(link){ %>
                        <tr>
                            <td><%=link.title%></td>
                            <td><a target="_blank" href="<%=link.link%>"><%=link.link%></a></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

        </div>
    </div>





    <!-- JavaScript Bundle with Popper -->
    <!-- jQuery -->
    <script src="js/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap 4.5 JS -->
    <script src="js/bootstrap.min.js"></script>
</body>

</html>